<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PMK Performance Dashboard"
    Width="360"
    Height="520"
    WindowStyle="None"
    ResizeMode="NoResize"
    Background="#111111"
    AllowsTransparency="True"
    Topmost="True"
    ShowInTaskbar="False">

    <Border
        CornerRadius="12"
        BorderThickness="1"
        BorderBrush="#2A2A2A"
        Background="#111111"
        Padding="14">

        <StackPanel Orientation="Vertical" VerticalAlignment="Top">

            <!-- ================= HEADER ================= -->
            <TextBlock
                Text="PMK PERFORMANCE"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                HorizontalAlignment="Center"
                Margin="0,0,0,10"/>

            <!-- ================= CPU RING ================= -->
            <Grid Width="130" Height="130" HorizontalAlignment="Center">

                <!-- Background ring -->
                <Ellipse
                    Width="110"
                    Height="110"
                    Stroke="#2A2A2A"
                    StrokeThickness="8"/>

                <!-- CPU Ring -->
                <Path
                    x:Name="CpuRing"
                    Stroke="LimeGreen"
                    StrokeThickness="8"
                    StrokeStartLineCap="Round"
                    StrokeEndLineCap="Round"/>

                <!-- CPU Text -->
                <TextBlock
                    x:Name="CpuText"
                    Text="0%"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Grid>

            <!-- CPU BAR -->
            <ProgressBar
                x:Name="CpuBar"
                Height="10"
                Margin="0,8,0,12"
                Maximum="100"
                Value="0"
                Foreground="LimeGreen"
                Background="#2A2A2A"/>

            <!-- ================= RAM ================= -->
            <TextBlock
                Text="RAM"
                Foreground="#AAAAAA"
                FontSize="12"/>

            <Grid Margin="0,2,0,8">
                <ProgressBar
                    x:Name="RamBar"
                    Height="10"
                    Maximum="100"
                    Value="0"
                    Foreground="LimeGreen"
                    Background="#2A2A2A"/>
                <TextBlock
                    x:Name="RamText"
                    Text="0%"
                    Foreground="White"
                    FontSize="11"
                    HorizontalAlignment="Right"
                    Margin="0,0,4,0"/>
            </Grid>

            <!-- ================= DISK ================= -->
            <TextBlock
                Text="DISK C:"
                Foreground="#AAAAAA"
                FontSize="12"/>

            <Grid Margin="0,2,0,4">
                <ProgressBar
                    x:Name="DiskBar"
                    Height="10"
                    Maximum="100"
                    Value="0"
                    Foreground="LimeGreen"
                    Background="#2A2A2A"/>
                <TextBlock
                    x:Name="DiskText"
                    Text="0%"
                    Foreground="White"
                    FontSize="11"
                    HorizontalAlignment="Right"
                    Margin="0,0,4,0"/>
            </Grid>

            <!-- DISK WARNING -->
            <TextBlock
                x:Name="DiskWarn"
                Text="âš  Disk almost full"
                Foreground="Red"
                FontSize="12"
                FontWeight="Bold"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                Margin="0,4,0,8"/>

            <!-- ================= CLEAN STATUS ================= -->
            <Separator Margin="0,6,0,6"/>

            <TextBlock
                Text="SYSTEM CLEAN"
                Foreground="#AAAAAA"
                FontSize="12"/>

            <ProgressBar
                x:Name="CleanBar"
                Height="10"
                Maximum="100"
                Value="0"
                Foreground="DeepSkyBlue"
                Background="#2A2A2A"
                Margin="0,4,0,4"/>

            <TextBlock
                x:Name="CleanText"
                Text="Idle"
                Foreground="White"
                FontSize="11"
                HorizontalAlignment="Center"/>

        </StackPanel>
    </Border>
</Window>
