<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PMK Performance Dashboard"
    Width="360"
    Height="260"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize"
    WindowStyle="SingleBorderWindow"
    Background="#111111"
    Foreground="White"
    FontFamily="Segoe UI"
    FontSize="12">

    <Grid Margin="10">

        <!-- ================= HEADER ================= -->
        <DockPanel LastChildFill="True">
            <TextBlock
                Text="PMK Performance Monitor"
                FontSize="14"
                FontWeight="Bold"
                DockPanel.Dock="Left"
                VerticalAlignment="Center"/>

            <Button
                x:Name="CloseButton"
                Content="✕"
                Width="28"
                Height="28"
                DockPanel.Dock="Right"
                Background="#222"
                Foreground="White"
                BorderBrush="#444"
                FontWeight="Bold"
                Cursor="Hand"/>
        </DockPanel>

        <!-- ================= CONTENT ================= -->
        <Grid Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== CPU RING ========== -->
            <Grid Grid.Column="0" HorizontalAlignment="Center">
                <Canvas Width="130" Height="130">

                    <!-- Background ring -->
                    <Ellipse
                        Width="110"
                        Height="110"
                        Stroke="#333"
                        StrokeThickness="10"
                        Canvas.Left="10"
                        Canvas.Top="10"/>

                    <!-- CPU Ring -->
                    <Path
                        x:Name="CpuRing"
                        Stroke="LimeGreen"
                        StrokeThickness="10"
                        StrokeStartLineCap="Round"
                        StrokeEndLineCap="Round"/>

                    <!-- CPU Text -->
                    <TextBlock
                        x:Name="CpuText"
                        Text="0%"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Canvas.Left="45"
                        Canvas.Top="45"/>
                </Canvas>

                <TextBlock
                    Text="CPU"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0"
                    Foreground="#AAA"/>
            </Grid>

            <!-- ========== RAM + DISK ========== -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">

                <!-- RAM -->
                <TextBlock Text="RAM Usage" Foreground="#AAA"/>
                <ProgressBar
                    x:Name="RamBar"
                    Height="16"
                    Maximum="100"
                    Background="#222"
                    Foreground="LimeGreen"/>
                <TextBlock
                    x:Name="RamText"
                    Text="0%"
                    Margin="0,2,0,8"/>

                <!-- DISK -->
                <TextBlock Text="Disk C:" Foreground="#AAA"/>
                <ProgressBar
                    x:Name="DiskBar"
                    Height="16"
                    Maximum="100"
                    Background="#222"
                    Foreground="LimeGreen"/>
                <TextBlock
                    x:Name="DiskText"
                    Text="0%"
                    Margin="0,2,0,0"/>

                <!-- DISK WARNING -->
                <TextBlock
                    x:Name="DiskWarn"
                    Text="⚠ Disk almost full"
                    Foreground="OrangeRed"
                    FontWeight="Bold"
                    Visibility="Collapsed"
                    Margin="0,6,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
