<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PMK Performance Dashboard"
    Width="380"
    Height="300"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    WindowStyle="SingleBorderWindow"
    Background="#111111"
    Foreground="White"
    FontFamily="Segoe UI"
    FontSize="12">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <TextBlock
                Text="PMK Performance Monitor"
                FontSize="14"
                FontWeight="Bold"
                DockPanel.Dock="Left"
                VerticalAlignment="Center"/>

            <Button
                x:Name="CloseButton"
                Content="✕"
                Width="28"
                Height="28"
                DockPanel.Dock="Right"
                Background="#222"
                Foreground="White"
                BorderBrush="#444"
                FontWeight="Bold"
                Cursor="Hand"/>
        </DockPanel>

        <!-- ================= MAIN CONTENT ================= -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== CPU AREA ========== -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">

                <Canvas Width="130" Height="130">

                    <!-- Background Ring -->
                    <Ellipse
                        Width="110"
                        Height="110"
                        Stroke="#333"
                        StrokeThickness="10"
                        Canvas.Left="10"
                        Canvas.Top="10"/>

                    <!-- CPU Ring -->
                    <Path
                        x:Name="CpuRing"
                        Stroke="LimeGreen"
                        StrokeThickness="10"
                        StrokeStartLineCap="Round"
                        StrokeEndLineCap="Round"
                        Data="M 65,10 A 55,55 0 0 1 65,10"/>

                    <!-- CPU TEXT -->
                    <TextBlock
                        x:Name="CpuText"
                        Text="0%"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="White"
                        Canvas.Left="45"
                        Canvas.Top="45"/>
                </Canvas>

                <ProgressBar
                    x:Name="CpuBar"
                    Height="10"
                    Width="120"
                    Maximum="100"
                    Margin="0,6,0,0"
                    Background="#222"
                    Foreground="LimeGreen"/>

                <TextBlock
                    Text="CPU"
                    HorizontalAlignment="Center"
                    Foreground="#AAA"
                    Margin="0,4,0,0"/>
            </StackPanel>

            <!-- ========== RAM + DISK ========== -->
            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">

                <!-- RAM -->
                <TextBlock Text="RAM Usage" Foreground="#AAA"/>
                <ProgressBar
                    x:Name="RamBar"
                    Height="14"
                    Maximum="100"
                    Background="#222"
                    Foreground="LimeGreen"/>
                <TextBlock
                    x:Name="RamText"
                    Text="0%"
                    Margin="0,2,0,8"/>

                <!-- DISK -->
                <TextBlock Text="Disk C:" Foreground="#AAA"/>
                <ProgressBar
                    x:Name="DiskBar"
                    Height="14"
                    Maximum="100"
                    Background="#222"
                    Foreground="LimeGreen"/>
                <TextBlock
                    x:Name="DiskText"
                    Text="0%"
                    Margin="0,2,0,0"/>

                <!-- DISK WARNING -->
                <TextBlock
                    x:Name="DiskWarn"
                    Text="⚠ Disk almost full"
                    Foreground="OrangeRed"
                    FontWeight="Bold"
                    Visibility="Collapsed"
                    Margin="0,6,0,0"/>
            </StackPanel>
        </Grid>

        <!-- ================= CLEAN SYSTEM ================= -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock
                x:Name="CleanText"
                Text="Idle"
                Foreground="#AAA"/>

            <ProgressBar
                x:Name="CleanBar"
                Height="12"
                Maximum="100"
                Background="#222"
                Foreground="DodgerBlue"/>
        </StackPanel>
    </Grid>
</Window>
